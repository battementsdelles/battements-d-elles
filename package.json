{
  "name": "battements-d-elles",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "next lint",
    "format:check": "prettier . --check",
    "format": "prettier . --write",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "clean:install": "npx rimraf node_modules/ && npm i",
    "typeorm:cli": "npx ts-node --project tsconfig.orm.json ./node_modules/typeorm/cli.js -d ./app/helpers/typeorm/datasrc.migrations.ts",
    "migration:create": "npx ts-node --project tsconfig.orm.json ./node_modules/typeorm/cli.js migration:create ./app/helpers/typeorm/migrations/new",
    "migration:generate": "npm run typeorm:cli migration:generate ./app/helpers/typeorm/migrations/update",
    "migration:run": "npm run typeorm:cli migration:run",
    "migration:revert": "npm run typeorm:cli migration:revert",
    "schema:log": "npm run typeorm:cli schema:log"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "classnames": "^2.5.1",
    "daisyui": "^5.0.9",
    "next": "15.2.4",
    "next-auth": "^5.0.0-beta.25",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21",
    "webpack-filter-warnings-plugin": "^1.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
